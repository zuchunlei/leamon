<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
                    http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                    http://www.springframework.org/schema/context
                    http://www.springframework.org/schema/context/spring-context-2.5.xsd
                    ">

	<!-- 本地数据源 -->
	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.SingleConnectionDataSource"
		destroy-method="destroy">
		<property name="driverClassName" value="org.gjt.mm.mysql.Driver"></property>
		<property name="url" value="jdbc:mysql://192.168.1.57:3306/test"></property>
		<property name="username" value="root"></property>
		<property name="password" value="root"></property>
	</bean>

	<!-- 事务管理器 -->
	<bean id="transactionManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource">
			<ref local="dataSource" />
		</property>
	</bean>

	<!-- 本地事务配置模板，所有的事务代理对象均复用该模板 -->
	<bean id="localTransactionConfigTemplet"
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean"
		abstract="true">
		<!-- 事务管理器 -->
		<property name="transactionManager">
			<ref local="transactionManager" />
		</property>
		<!-- 事务属性 -->
		<property name="transactionAttributes">
			<props>
				<prop key="add*">PROPAGATION_REQUIRED</prop>
				<prop key="get*">readOnly,ISOLATION_READ_COMMITTED</prop>
			</props>
		</property>
	</bean>

	<bean id="dao" class="com.bes.ssh.exam.dao.impl.DaoImpl">
		<property name="dataSource">
			<ref local="dataSource" />
		</property>
	</bean>

	<bean id="serviceTarget" class="com.bes.ssh.exam.service.impl.ServiceImpl">
		<property name="dao">
			<ref local="dao" />
		</property>
	</bean>

	<bean id="service" parent="localTransactionConfigTemplet">
		<!-- 代理目标 -->
		<property name="target">
			<ref local="serviceTarget" />
		</property>
	</bean>

</beans>